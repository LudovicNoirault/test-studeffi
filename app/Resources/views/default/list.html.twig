{% extends 'base.html.twig' %}

{% block page %}list{% endblock %}

{% block content %}

    <div class="head">
        <h2>Liste des compteurs</h2>
        <a href="{{path('create')}}">
            <i class="fas fa-plus-square"> Ajouter</i>
        </a>
    </div>
    <table class="body">
        <thead>
        <tr>
            <th>ID</th>
            <th>Nom</th>
            <th>NÂ° de Voie</th>
            <th>Nom de Voie</th>
            <th>Code postal</th>
            <th>Ville</th>
            <th>Code Insee</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for compteur in compteurs %}
            <tr>
                <td>{{compteur.id}}</td>
                <td>{{compteur.nom}}</td>
                <td>{{compteur.numeroVoie}}</td>
                <td>{{compteur.nomVoie}}</td>
                <td>{{compteur.codePostal}}</td>
                <td>{{compteur.ville}}</td>
                <td>{{compteur.codeInsee}}</td>
                <td class="actions">
                    <a href="{{path('read', {id: compteur.id} )}}"><i class="fas fa-eye"></i></a>
                    <a href="{{path('update', {id: compteur.id})}}"><i class="fas fa-pen-alt"></i></a>
                    <a href="{{path('delete', {id: compteur.id})}}"><i class="fas fa-trash-alt"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}